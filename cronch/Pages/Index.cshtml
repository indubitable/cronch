@page
@model IndexModel
@{
    ViewData["Title"] = "Overview";
    ViewData["active"] = "overview";
}

<div class="text-center">
    <h1 class="display-4">Welcome to <span class="styled-logo-text">CRONCH!</span></h1>
    <br />
    <div class="container text-center">
        <div class="row">
            <div class="col border border-bottom-0">
                <h2><u>All Jobs</u></h2>
                <p class="fs-3">7 of 25 enabled</p>
            </div>
            <div class="col border border-bottom-0">
                <h2><u>Running Jobs</u></h2>
                <table class="table table-striped text-start">
                    <tr>
                        <td>METAR <span class="badge rounded-pill text-bg-dark float-end">00:01</span></td>
                    </tr>
                    <tr>
                        <td>HRRR <span class="badge rounded-pill text-bg-dark float-end">07:23</span></td>
                    </tr>
                    <tr>
                        <td>GFS <span class="badge rounded-pill text-bg-dark float-end">01:12:37</span></td>
                    </tr>
                </table>
            </div>
            <div class="col border border-bottom-0">
                <h2><u>Failed Jobs</u></h2>
                <table class="table table-striped">
                    <tr>
                        <td class="text-start">Last day</td>
                        <td class="text-end">0</td>
                    </tr>
                    <tr>
                        <td class="text-start">Last week</td>
                        <td class="text-end">0</td>
                    </tr>
                    <tr>
                        <td class="text-start">Last month</td>
                        <td class="text-end">123</td>
                    </tr>
                </table>
            </div>
        </div>
        <div class="row">
            <div class="col border border-top-0">
                <p><a asp-page="Manage" class="btn btn-outline-dark">Manage Jobs</a></p>
            </div>
            <div class="col border border-top-0">
                <p><a asp-page="Manage" class="btn btn-outline-dark">See All 5</a></p>
            </div>
            <div class="col border border-top-0">
                <p><a asp-page="History" class="btn btn-outline-dark">View Details</a></p>
            </div>
        </div>
    </div>
    <br />
    <h2>Recent jobs</h2>
    <partial name="_JobListPartial" />
</div>
