@inject cronch.Services.JobExecutionService _layoutExecutionService
@{
    var _layoutStats = _layoutExecutionService.GetExecutionStatistics(DateTimeOffset.UtcNow.AddDays(-7), DateTimeOffset.UtcNow);
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CRONCH!</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/hljs/default.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/cronch.styles.css" asp-append-version="true" />
    <environment include="Development">
        <script type="text/javascript" src="~/lib/htmx/dist/htmx.js"></script>
    </environment>
    <environment exclude="Development">
        <script type="text/javascript" src="~/lib/htmx/dist/htmx.min.js"></script>
    </environment>
    <script type="text/javascript" src="~/lib/htmx/dist/ext/loading-states.js"></script>
    <script>
        (function () {
            var t = localStorage.getItem('cronch-theme') ||
                (window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light');
            document.documentElement.setAttribute('data-bs-theme', t);
        })();
    </script>
</head>
@functions {
    public string GetActive(string name)
    {
        return (ViewData["active"] != null && ViewData["active"]!.Equals(name) ? "active" : "");
    }
}
<body>
    @if (TempData.ContainsKey("Message"))
    {
        var messageType = (TempData.ContainsKey("MessageType") ? TempData["MessageType"] : "info");

        <div aria-live="polite" aria-atomic="true" class="bg-body-secondary position-relative rounded-3">
            <div class="toast-container p-3 top-0 start-50 translate-middle-x">
                <div class="toast border-@messageType">
                    <div class="toast-header text-bg-@messageType">
                        <strong class="me-auto">Message</strong>
                    </div>
                    <div class="toast-body">
                        @TempData["Message"]
                        @if (TempData.ContainsKey("MessageLink") && TempData.ContainsKey("MessageLinkName"))
                        {
                            <div>
                                <br />
                                <a href="@TempData["MessageLink"]" class="btn btn-sm btn-outline-secondary">@TempData["MessageLinkName"]</a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm bg-body-tertiary border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-page="/Index">CRONCH!</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item @GetActive("overview")">
                            <a class="nav-link" asp-page="/Index">Overview</a>
                        </li>
                        <li class="nav-item @GetActive("manage")">
                            <a class="nav-link" asp-page="/Manage">Manage</a>
                        </li>
                        <li class="nav-item @GetActive("history")">
                            <a class="nav-link" asp-page="/History">History</a>
                        </li>
                        <li class="nav-item @GetActive("settings")">
                            <a class="nav-link" asp-page="/Settings">Settings</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav gap-1 align-items-center">
                        @if (_layoutStats.Errors > 0 || _layoutStats.Warnings > 0)
                        {
                            @if (_layoutStats.Errors > 0)
                            {
                                <li class="nav-item">
                                    <a asp-page="/History" asp-route-status="CompletedAsError"
                                       class="badge rounded-pill text-bg-danger text-decoration-none"
                                       title="@_layoutStats.Errors error(s) in the last 7 days">&#x2715; @_layoutStats.Errors</a>
                                </li>
                            }
                            @if (_layoutStats.Warnings > 0)
                            {
                                <li class="nav-item">
                                    <a asp-page="/History" asp-route-status="CompletedAsWarning"
                                       class="badge rounded-pill badge-cronch-warning text-decoration-none"
                                       title="@_layoutStats.Warnings warning(s) in the last 7 days">&#x26A0;&#xFE0E; @_layoutStats.Warnings</a>
                                </li>
                            }
                        }
                        <li class="nav-item">
                            <button class="btn btn-sm btn-outline-secondary border-0" onclick="cronchToggleTheme()"
                                    title="Toggle light/dark mode" aria-label="Toggle theme">
                                <span class="theme-icon-light">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
                                        <path d="M8 11a3 3 0 1 1 0-6 3 3 0 0 1 0 6m0 1a4 4 0 1 0 0-8 4 4 0 0 0 0 8M8 0a.5.5 0 0 1 .5.5v2a.5.5 0 0 1-1 0v-2A.5.5 0 0 1 8 0m0 13a.5.5 0 0 1 .5.5v2a.5.5 0 0 1-1 0v-2A.5.5 0 0 1 8 13m8-5a.5.5 0 0 1-.5.5h-2a.5.5 0 0 1 0-1h2a.5.5 0 0 1 .5.5M3 8a.5.5 0 0 1-.5.5h-2a.5.5 0 0 1 0-1h2A.5.5 0 0 1 3 8m10.657-5.657a.5.5 0 0 1 0 .707l-1.414 1.415a.5.5 0 1 1-.707-.708l1.414-1.414a.5.5 0 0 1 .707 0m-9.193 9.193a.5.5 0 0 1 0 .707L3.05 13.657a.5.5 0 0 1-.707-.707l1.414-1.414a.5.5 0 0 1 .707 0m9.193 2.121a.5.5 0 0 1-.707 0l-1.414-1.414a.5.5 0 0 1 .707-.707l1.414 1.414a.5.5 0 0 1 0 .707M4.464 4.465a.5.5 0 0 1-.707 0L2.343 3.05a.5.5 0 1 1 .707-.707l1.414 1.414a.5.5 0 0 1 0 .708"/>
                                    </svg>
                                </span>
                                <span class="theme-icon-dark">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
                                        <path d="M6 .278a.77.77 0 0 1 .08.858 7.2 7.2 0 0 0-.878 3.46c0 4.021 3.278 7.277 7.318 7.277q.792-.001 1.533-.16a.79.79 0 0 1 .81.316.73.73 0 0 1-.031.893A8.35 8.35 0 0 1 8.344 16C3.734 16 0 12.286 0 7.71 0 4.266 2.114 1.312 5.124.06A.75.75 0 0 1 6 .278"/>
                                    </svg>
                                </span>
                            </button>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container d-flex justify-content-between align-items-center">
            <span>Made with ❤️ in sunny Indiana</span>
            <a class="text-muted" asp-page="/About">About</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <environment include="Development">
        <script type="text/javascript" src="~/lib/hljs/highlight.js"></script>
    </environment>
    <environment exclude="Development">
        <script type="text/javascript" src="~/lib/hljs/highlight.min.js"></script>
    </environment>
    <script type="text/javascript" src="~/lib/ace/ace.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
